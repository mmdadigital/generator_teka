{
  "page": {
    "content": {
      "join()": [
        {
          "include()": {
            "pattern": "molecules-block-page-title",
            "with": {
              "content": {
                "include()": {
                  "pattern": "atoms-page-title",
                  "with": {
                    "title": "My awesome article"
                  }
                }
              }
            }
          }
        },
        {
          "include()": {
            "pattern": "molecules-block-main",
            "with": {
              "content": {
                "include()": {
                  "pattern": "organisms-node-article",
                  "with": {
                    "view_mode": "full",
                    "page": true,
                    "content": {
                      "join()": [
                        "My awesome article content.<br>",
                        {
                          "include()": {
                            "pattern": "atoms-image-medium",
                            "with": {
                              "attributes": {
                                "Attribute()": {
                                  "src": "http://lorempixel.com/200/200/cats"
                                }
                              }
                            }
                          }
                        },
                        "organisms-field--comment"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      ]
    }
  }
}
